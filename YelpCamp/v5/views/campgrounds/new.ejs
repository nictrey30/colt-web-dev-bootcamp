<%- include('../partials/header') %>
<div class="container">
  <div class="row">
    <h1 class="text-center">Create a New Campground</h1>
    <div id="form">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="campground[name]" placeholder="name">
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input type="text" class="form-control" name="campground[image]" placeholder="image">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" name="campground[description]" rows="5"
            placeholder="Add a description"></textarea>
        </div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>