<%- include('../partials/header') %>
<div class="container">
  <div class="row">
    <h1 class="text-center">Add new comment to <%= campground.name %></h1>
    <div id="form">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <label for="comment-text">Text</label>
          <input
            type="text"
            class="form-control"
            name="comment[text]"
            id="comment-text"
            placeholder="text"
          />
        </div>
        <div class="form-group">
          <label for="comment-author">Author</label>
          <input
            type="text"
            class="form-control"
            name="comment[author]"
            id="comment-author"
            placeholder="author"
          />
        </div>
        <input
          class="btn btn-lg btn-primary btn-block"
          type="submit"
          value="Submit"
        />
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
