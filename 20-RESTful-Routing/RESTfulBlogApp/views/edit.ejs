<%- include('partials/header') %>
<div class="ui main container text segment">
  <div class="ui huge header">Edit "<%= blog.title %>"</div>
  <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" id="" value="<%= blog.title %> " />
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" id="" value="<%= blog.image %>" />
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]" id="" rows="5"> <%= blog.body %></textarea>
    </div>
    <input class="ui violet inverted button" type="submit" value="Submit" />
  </form>
</div>
<%- include('partials/footer') %>